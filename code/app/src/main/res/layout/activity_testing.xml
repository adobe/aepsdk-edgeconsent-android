<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestingActivity">

        <Button
            android:id="@+id/btnTestRepeatedSameConsents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispatch multiple (4) updates with same consents."
            android:layout_marginTop="16dp"
            android:onClick="btnTestRepeatedSameConsentsClicked"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnTestRepeatedDifferentConsents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispatch multiple (4) updates with different consents."
            android:layout_marginTop="16dp"
            android:onClick="btnTestRepeatedDifferentConsentsClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnTestRepeatedSameConsents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnTestRepeatedMixedConsents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispatch multiple (4) updates with mixed consents."
            android:layout_marginTop="16dp"
            android:onClick="btnTestRepeatedMixedConsentsClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnTestRepeatedDifferentConsents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnGetConsents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Consents"
            android:layout_marginTop="16dp"
            android:onClick="btnGetConsentsClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnTestRepeatedMixedConsents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtViewConsents"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:text='Hit "Get Consents" for latest consents'
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGetConsents" />

</androidx.constraintlayout.widget.ConstraintLayout>