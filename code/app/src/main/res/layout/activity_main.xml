<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consent Preferences"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/llConsentRows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnAddConsent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Consent"
            android:layout_marginTop="16dp"
            android:onClick="btnAddConsentClicked"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnUpdateConsents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Consents"
            android:layout_marginTop="16dp"
            android:onClick="btnUpdateConsentsClicked"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnGetConsents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Consents"
            android:layout_marginTop="16dp"
            android:onClick="btnGetConsentsClicked"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/txtViewConsents"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text='Hit "Get Consents" for latest consents'
            android:textAlignment="textStart"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay" />

    </LinearLayout>

</ScrollView>